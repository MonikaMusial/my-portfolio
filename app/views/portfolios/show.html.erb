<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@item.main_image, "main"), width:"100%" %>
    </div>
    <div class="col-md-5">
     <h1><%= @item.title %></h1>
     <a href="<%= @item.subtitle %>">My github repo</a>
     <p> <%= twitter_parser @item.body %></p>

    <h2>Technologies used</h2>
    <% @item.technologies.each do |t| %>
      <ul>
        <li><%= t.name %></li>
      </ul>
    <% end %>
    <br>
    <%= link_to 'View All Portfolio Items', portfolios_path %>
    <br>
    <%= link_to 'Edit', edit_portfolio_path(@item) if logged_in?(:site_admin)%>
    </div>
  </div>
</div>

|

