<h1> Angular Portfolio items:</h1>
<%= link_to 'New Angular Portfolio Items', new_blog_path %>
<% @angular_items.each do |item| %>
    <p><%= link_to item.title, portfolio_show_path(item) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <p>
    <%= image_tag item.main_image.url unless item.main_image.nil? %>
    </p>
    <td><%= link_to 'Edit', edit_portfolio_path(item) if logged_in?(:site_admin)%></td>
    <td><%= (link_to 'Delete', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' }) if logged_in?(:site_admin)%></td>

<% end %>

