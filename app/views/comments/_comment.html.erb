<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="col-md-1">
      </div>
      <div class="col-md-11">
        <div>
          <%= comment.content %>
        </div>

        <div class="comment_attribution">
          Comment posted by: <%= comment.user.first_name %> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
        </div>
      </div>
    </div>
  </div>
</div>
